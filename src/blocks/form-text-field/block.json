{
	"apiVersion": 3,
	"name": "bigup-forms/form-text-field",
	"version": "0.0.1",
	"title": "Text Field",
	"category": "widgets",
	"description": "Customisable input field for any text type",
	"keywords": [ "form", "input", "text" ],
	"textdomain": "bigup-forms",
	"editorScript": "file:./form-text-field.js",
	"viewScript": "file:./form-text-field-view.js",
	"ancestor": [ "bigup-forms/form" ],
	"usesContext": [ "bigup-forms/formID" ],
	"attributes": {
		"blockId": {
			"type": "string"
		},
		"variation": {
			"type": "string",
			"default": "text"
		},
		"format": {
			"type": "string",
			"default": "any_text"
		},
		"validationAttrs": {
			"type": "array",
			"default": [
				"minlength",
				"maxlength",
				"pattern"
			]
		},
		"label": {
			"type": "rich-text",
			"selector": "label",
			"source": "text"
		},
		"showLabel": {
			"type": "boolean",
			"default": true
		},
		"name": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "name",
			"default": "text"
		},
		"type": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "type",
			"default": "text"
		},
		"required": {
			"type": "boolean",
			"source": "attribute",
			"selector": "input",
			"attribute": "required",
			"default": false
		},
		"autocomplete": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "autocomplete",
			"default": "off"
		},
		"placeholder": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "placeholder",
			"default": "Type here..."
		},
		"rows": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "rows",
			"default": "8"
		},
		"pattern": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "pattern",
			"default": ""
		},
		"maxlength": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "maxlength",
			"default": ""
		},
		"minlength": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "minlength",
			"default": ""
		},
		"max": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "max",
			"default": ""
		},
		"min": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "min",
			"default": ""
		},
		"step": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "step",
			"default": ""
		}
	}
}
