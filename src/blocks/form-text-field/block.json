{
	"apiVersion": 2,
	"name": "bigup-forms/form-text-field",
	"version": "0.0.1",
	"title": "Text Field",
	"category": "widgets",
	"description": "Customisable input field for any text type",
	"keywords": [ "form", "input", "text" ],
	"textdomain": "bigup-forms",
	"editorScript": "file:./form-text-field.js",
	"viewScript": "file:./form-text-field-view.js",
	"ancestor": [ "bigup-forms/form" ],
	"usesContext": [ "bigup-forms/variation" ],
	"attributes": {
		"variation": {
			"type": "string",
			"default": "text"
		},
		"format": {
			"type": "string",
			"default": "any_text"
		},
		"validation": {
			"type": "object",
			"default": {
				"minlength": "",
				"maxlength": "",
				"pattern": ""
			}
		},
		"label": {
			"type": "rich-text",
			"selector": "label",
			"source": "text",
			"default": "Text"
		},
		"labelIsHidden": {
			"type": "boolean",
			"default": false
		},
		"name": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "name",
			"default": "text"
		},
		"type": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "type",
			"default": "text"
		},
		"required": {
			"type": "boolean",
			"source": "attribute",
			"selector": "input",
			"attribute": "required",
			"default": false
		},
		"autocomplete": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "autocomplete",
			"default": "off"
		},
		"placeholder": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "placeholder",
			"default": "Type here..."
		},
		"rows": {
			"type": "string",
			"source": "attribute",
			"selector": "input",
			"attribute": "rows",
			"default": "8"
		}
	}
}
