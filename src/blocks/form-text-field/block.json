{
	"apiVersion": 2,
	"name": "bigup-forms/form-text-field",
	"version": "0.0.1",
	"title": "Form Text Field",
	"category": "widgets",
	"description": "Customisable input field for any text type",
	"keywords": [ "form", "input", "text" ],
	"textdomain": "bigup-forms",
	"editorScript": "file:./form-text-field.js",
	"viewScript": "file:./form-text-field-view.js",
	"ancestor": [ "bigup-forms/form" ],
	"attributes": {
		"type": {
			"type": "string",
			"default": "text"
		},
		"name": {
			"type": "string"
		},
		"label": {
			"type": "rich-text",
			"selector": "label",
			"source": "text"
		},
		"labelID": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "id"
		},
		"labelIsHidden": {
			"type": "boolean",
			"default": false
		},
		"required": {
			"type": "boolean",
			"default": false,
			"selector": "input",
			"source": "attribute",
			"attribute": "required"
		},
		"autocomplete": {
			"type": "string",
			"default": "off",
			"selector": "input",
			"source": "attribute",
			"attribute": "autocomplete"
		},
		"placeholder": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "placeholder"
		},
		"format": {
			"type": "string",
			"enum": [
				"human_name_international",
				"phone_number_international",
				"email_non_rfc",
				"domain_non_rfc",
				"port_number"
			],
			"selector": "input",
			"source": "attribute",
			"attribute": "data-format"
		},
		"minlength": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "minlength"
		},
		"maxlength": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "maxlength"
		},
		"min": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "min"
		},
		"max": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "max"
		},
		"step": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "step"
		},
		"pattern": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "pattern"
		},
		"size": {
			"type": "string",
			"selector": "input",
			"source": "attribute",
			"attribute": "size"
		},
		"rows": {
			"type": "string",
			"default": "8",
			"selector": "input",
			"source": "attribute",
			"attribute": "rows"
		},
		"visibilityPermissions": {
			"type": "string",
			"default": "all"
		},
		"variation": {
			"type": "string"
		}
	}
}
